<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@mipmap/call_bg"
        android:layout_height="match_parent"
>
    <TextView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="130dp"
              android:paddingTop="22dp"
              android:text="一键报警"
              android:textSize="25dp"
              android:textColor="@android:color/white"
              android:layout_marginTop="0dp"
              android:layout_alignParentTop="true"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="0dp"/>
    <ImageView
            android:layout_width="25dp"
            android:layout_height="33dp"
            app:srcCompat="@mipmap/fire_wall"
            android:id="@+id/imageView5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="165dp"
            android:layout_marginTop="80dp"
            />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="333dp"
            android:layout_height="46dp"
            android:layout_marginTop="126dp"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_warn_three"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="11dp">
        <TextView
                android:layout_marginTop="8dp"
                android:text="发生场所"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_warn_background"
                android:layout_width="90dp"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                android:gravity="clip_horizontal"
                android:layout_height="30dp"
                android:id="@+id/text1"

        />
        <TextView
                android:text="人员情况"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:textColor="#3AA250"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                android:id="@+id/text2"
                android:gravity="clip_horizontal"
        />
        <TextView
                android:textColor="#3AA250"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="现场图文"
                android:paddingLeft="17dp"
                android:paddingTop="5dp"
                android:layout_width="90dp"
                android:gravity="clip_horizontal"
                android:layout_height="30dp"
                android:id="@+id/text3"/>
    </LinearLayout>
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="180dp"
                 android:id="@+id/warn_container"
                 android:layout_alignParentTop="true"/>
    <!--这里开始-->
    <Button
            android:text="一键报警"
            android:background="@drawable/red_button"
            android:layout_width="134dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/call_fire"
            android:layout_marginEnd="113dp"
            android:layout_marginTop="458dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
    <!--这里结束-->
</RelativeLayout>
